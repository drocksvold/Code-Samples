#This formula links to file type icons
fxDocTypeIcons(Extension:Text):Text = $"https://static2.sharepointonline.com/files/fabric/assets/item-types/24/{Extension}.svg";

#This formula will get the centered dimension for use in positioning controls in Power Apps
udfGetCenteredDimension( ParentDimension:Number, SelfDimension:Number):Number = ((ParentDimension - SelfDimension) / 2);

#This function will create appointment time slots
udfGenerateAppointmentCalendarWindows(CalStartDate:DateTime, CalStartTime:Text,AppointmentCount:Number,AppointmentDuration:Number):Dynamic = ParseJSON(
    JSON(
        AddColumns(
            Sequence(
                AppointmentCount,
                0
            ) As MyNum,
            myTime,
            Text(
                DateAdd(
                    DateTimeValue(CalStartTime),
                    30 * MyNum.Value,
                    TimeUnit.Minutes
                ),
                DateTimeFormat.ShortTime
            ),
            myDate,
            Text(
                DateAdd(
                    DateTimeValue(
                        CalStartDate & " " & Text(
                            LookUp(
                                fxAppointmentTimes,
                                CalStartTime = StartTimeAMPM,
                                StartTime24
                            )
                        )
                    ),
                    30 * MyNum.Value,
                    TimeUnit.Minutes
                )
            )
        )
    )
);
#This function grabs the last two digits of the year from a date value
udfGetSelectedYear(JSADate:Date):Number = Value(
    Right(
        Year(JSADate),
        2
    )
);

#This function uses the get selected year function above to reeturn a value from the Sequential Number
# column and add one to return the value for the next record.
udfGetSequentialNumber(JSADate:Date):Number = If(
    IsBlank(
        First(
            SortByColumns(
                Filter(
                    PermitNumbers,
                    PermitYear = Value(udfGetSelectedYear(JSADate))
                ),
                "SequentialNumber",
                SortOrder.Descending
            )
        ).SequentialNumber
    ),
    1,
    First(
        SortByColumns(
            Filter(
                PermitNumbers,
                PermitYear = Value(udfGetSelectedYear(JSADate))
            ),
            "SequentialNumber",
            SortOrder.Descending
        )
    ).SequentialNumber + 1
);
